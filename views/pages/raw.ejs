<div id="myCarousel" class="carousel slide" data-ride="carousel">
  
    <!-- Wrapper for slides -->
    <div class="carousel-inner"> 
      <!-- TODO add active to the first element -->
      <% for(let i = 0;i < 5;i++) { %>
        <% if(i===0) { %>
          <div class="item active">
            <img src="/img/slide<%=i+1%>.jpg" alt="Slide <%=i%>"> 
            <div class="carousel-caption">
            <!-- <%= obj.list_of_articles[i].body %> -->
              <h4><a href="#"><%= obj.list_of_articles[i].created_by %></a></h4>
              <p></p>
            </div>
          </div><!-- End Item -->
        <% } else { %>
          <div class="item">
            <img src="/img/slide<%=i+1%>.jpg" alt="Slide <%=i%>"> 
            <div class="carousel-caption">
            <!-- <%= obj.list_of_articles[i].body %> -->
              <h4><a href="#"><%= obj.list_of_articles[i].created_by %></a></h4>
              <p></p>
            </div>
          </div><!-- End Item -->
        <% } } %>              
    </div><!-- End Carousel Inner -->

    <ul class="list-group slider-list col-sm-4">
      <% for(let i = 0;i < 5;i++) { %>
        <% if(i===0) { %>
          <li data-target="#myCarousel" data-slide-to="<%=i%>" class="list-group-item active">
            <img src="/img/slide<%=i+1%>.jpg" class="img-slide img-thumbnail">
            <h4>Slide Story <%=i%></h4>
            <p><%= obj.list_of_articles[i].title %></p>
          </li>
        <% } else { %>
          <li data-target="#myCarousel" data-slide-to="<%=i%>" class="list-group-item">
            <img src="/img/slide<%=i+1%>.jpg" class="img-slide img-thumbnail">
            <h4>Slide Story <%=i%></h4>
            <p><%= obj.list_of_articles[i].title %></p>
          </li>
      <% } } %>
    </ul>      
      <!-- Controls -->
    <div class="carousel-controls">
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
      </a>
    </div>      
  </div><!-- End Carousel -->